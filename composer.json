{
    "name": "lucatume/test-kit",
    "version": "0.1.0",
    "type": "library",
    "description": "Test kit mono-repository",
    "homepage": "https://theaveragedev.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Luca Tumedei",
            "email": "luca@theavereagedev.com",
            "homepage": "https://theaveragedev.com",
            "role": "Developer"
        }
    ],
    "require": {
        "ext-iconv": "*",
        "ext-json": "*",
        "php": ">=5.6",
        "zordius/lightncandy": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "lucatume\\Utils\\": "packages/utils/src"
        }
    },
    "autoload-dev": {
        "files": [
            "packages/utils/tests/_boostrap.php"
        ]
    },
    "replace": {
        "lucatume/utils": "self.version"
    }
}
